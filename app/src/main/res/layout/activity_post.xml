<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title_post_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="post activity"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_post_content_title"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/tv_post_content_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:hint="title"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/title_post_activity"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/tv_post_content_price"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:hint="price"
        app:layout_constraintTop_toBottomOf="@id/tv_post_content_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/tv_post_content_contents"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:hint="content"
        app:layout_constraintTop_toBottomOf="@id/tv_post_content_price"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_post_content"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btn_post_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="post"
        android:backgroundTint="@color/cardview_dark_background"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_post_content_contents"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp" />



</androidx.constraintlayout.widget.ConstraintLayout>